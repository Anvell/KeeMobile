<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <ripple android:color="@color/onSurface" android:radius="24dp">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_eye_show" android:gravity="center" />
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/onSurface" android:radius="24dp">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_eye_hide" android:gravity="center" />
        </ripple>
    </item>
</selector>
