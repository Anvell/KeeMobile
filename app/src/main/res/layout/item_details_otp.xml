<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View.OnLongClickListener" />

        <variable name="title" type="String" />
        <variable name="otp" type="io.github.anvell.keemobile.common.authentication.OneTimePassword" />
        <variable name="isSurface" type="Boolean" />
        <variable name="longClickListener" type="OnLongClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{isSurface? @color/surface : @android:color/transparent}"
        android:focusable="true"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/content_margin"
        app:onLongClick="@{longClickListener}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text"
            style="@style/Typography.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{title}"
            app:layout_constraintBottom_toTopOf="@+id/subtitle_text"
            app:layout_constraintEnd_toStartOf="@+id/progress_otp_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@tools:sample/lorem" />

        <io.github.anvell.keemobile.presentation.widgets.OneTimePasswordView
            android:id="@+id/subtitle_text"
            style="@style/Typography.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/progress_otp_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text"
            app:layout_constraintVertical_chainStyle="packed"
            app:oneTimePassword="@{otp}"
            app:progressBar="@id/progress_otp"
            tools:text="@tools:sample/lorem" />

        <FrameLayout
            android:id="@+id/progress_otp_frame"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/progress_circle_background" />

            <ProgressBar
                android:id="@+id/progress_otp"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="100"
                android:progressDrawable="@drawable/progress_circle" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
