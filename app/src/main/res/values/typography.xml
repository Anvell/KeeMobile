<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Typography.Display1" parent="Typography.Body">
        <item name="android:fontFamily">@font/firasans_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Typography.Display2" parent="Typography.Display1">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Typography.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Typography.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/firasans_regular</item>
    </style>

    <style name="Typography.Body.Uppercase">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="Typography.Caption" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/firasans_regular</item>
    </style>

</resources>
