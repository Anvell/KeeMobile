<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View.OnLongClickListener" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />

        <variable name="title" type="String" />
        <variable name="subtitle" type="String" />
        <variable name="isSurface" type="Boolean" />
        <variable name="longClickListener" type="OnLongClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{isSurface? @color/surface : @android:color/transparent}"
        android:focusable="true"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:orientation="vertical"
        android:padding="@dimen/content_margin"
        app:onLongClick="@{longClickListener}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_text"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{title}"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle_text"
            style="?attr/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{subtitle}"
            android:visibility="@{TextUtils.isEmpty(subtitle)? View.GONE : View.VISIBLE}"
            tools:text="@tools:sample/lorem" />
    </LinearLayout>

</layout>
